<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PopPop" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- status bar -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- splash -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="S">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="S">@drawable/app_logo_splash</item>


        <!-- Android System NavBar Color -->
        <item name="android:navigationBarColor">@color/white</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->


    </style>
    <!-- 다이얼로그 전시 -->
    <style name="DialogAnimation_None">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="Theme.PopPop" parent="Base.Theme.PopPop" />
</resources>