<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_round_top_border_20">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_24"
            android:padding="@dimen/padding_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >
            <ImageView
                android:layout_width="@dimen/item_36"
                android:layout_height="@dimen/item_4"
                android:background="@drawable/map_bottomsheet_bar_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_52"
            android:padding="@dimen/padding_16"
            android:background="@drawable/background_line_2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semibold"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="@dimen/text_8"
                android:text="업로드"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
        
        
        

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_take_camera_area"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/background_line_1"
            android:padding="@dimen/padding_16"
            android:paddingVertical="@dimen/padding_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <FrameLayout
                android:id="@+id/fl_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/_notification_item_icon_background"
                android:padding="@dimen/padding_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/icon_camera" />


            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fl_2"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_semibold"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="@dimen/text_8"
                    android:textColor="@color/black"
                    android:text="카메라"
                    android:textSize="@dimen/text_15"/>


                <TextView
                    android:id="@+id/tv_camera_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_medium"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="@dimen/text_8"
                    android:layout_marginTop="@dimen/margin_4"
                    android:text="대기 인원을 직접 촬영하세요"
                    android:textColor="@color/gray_600"
                    android:textSize="@dimen/text_14"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_open_gallery_area"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingVertical="@dimen/padding_20"
            android:padding="@dimen/padding_16"
            android:background="@drawable/background_line_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <FrameLayout
                android:id="@+id/fl_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintDimensionRatio="1:1"
                android:padding="@dimen/padding_8"
                android:background="@drawable/_notification_item_icon_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/icon_gallery"/>


            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fl_1"
                app:layout_constraintTop_toTopOf="parent" >

                <TextView
                    android:id="@+id/tv_gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_semibold"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="@dimen/text_8"
                    android:text="갤러리"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_15"/>

                <TextView
                    android:id="@+id/tv_gallery_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_medium"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="@dimen/text_8"
                    android:layout_marginTop="@dimen/margin_4"
                    android:text="갤러리에서 사진을 골라보세요"
                    android:textColor="@color/gray_600"
                    android:textSize="@dimen/text_14"/>


            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp"/>
    </LinearLayout>
</layout>