<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <View
            android:layout_width="match_parent"
            android:layout_height="467dp"
            android:background="@android:color/transparent"
            android:clickable="true"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/item_18"
            android:background="@color/white"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/iv_bottomsheet_bar_icon"
                android:layout_width="60dp"
                android:layout_height="5dp"
                android:layout_marginTop="@dimen/item_16"
                android:background="@drawable/map_bottomsheet_bar_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_message1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주변 팝업 스토어"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/item_24"
                app:layout_constraintTop_toBottomOf="@id/iv_bottomsheet_bar_icon"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="24dp"/>


            <TextView
                android:id="@+id/tv_message2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마음에 들어할 곳들을 추천해봤어요"
                android:textColor="@color/gray_700"
                android:textSize="@dimen/text_14"
                app:layout_constraintTop_toBottomOf="@id/tv_message1"
                app:layout_constraintStart_toStartOf="@id/tv_message1"
                android:layout_marginTop="@dimen/item_4" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_24"
                app:layout_constraintTop_toBottomOf="@id/tv_message2"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>