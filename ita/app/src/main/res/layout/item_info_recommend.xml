<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp">

        <ImageView
            android:id="@+id/iv_info_recommend"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_info_recommend_title"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="KT ROLSTER 팝업스토어"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="7.5sp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/iv_info_recommend"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팝업스토어"
            android:textColor="@color/gray_600"
            android:textSize="12sp"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="6sp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/tv_info_recommend_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:id="@+id/view"
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/info_recommend_circle_background"
            app:layout_constraintStart_toEndOf="@id/tv_popup"
            app:layout_constraintTop_toTopOf="@+id/tv_popup" />

        <TextView
            android:id="@+id/tv_recommend_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수원시 서둔동"
            android:textColor="@color/gray_700"
            android:textSize="12sp"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="6sp"
            android:layout_marginStart="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintTop_toTopOf="@id/tv_popup"
            app:layout_constraintStart_toEndOf="@id/view"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>