<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_item_favorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/item_16">

                <ImageView
                    android:id="@+id/iv_favorites"
                    android:layout_width="@dimen/item_128"
                    android:layout_height="@dimen/item_128"
                    tools:ignore="MissingConstraints" />

                <ImageButton
                    android:id="@+id/btn_favorites_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/favorites_star_icon"
                    app:layout_constraintTop_toTopOf="@id/iv_favorites"
                    app:layout_constraintEnd_toEndOf="@id/iv_favorites"
                    android:layout_margin="@dimen/margin_10"/>

                <TextView
                    android:id="@+id/tv_favorites_location"
                    android:text="장소"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/gray_600"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="6sp"
                    app:layout_constraintStart_toEndOf="@id/iv_favorites"
                    app:layout_constraintTop_toTopOf="@id/iv_favorites"
                    android:layout_marginStart="@dimen/item_16" />

                <TextView
                    android:id="@+id/tv_favorites_title"
                    android:text="제목"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="@dimen/text_8"
                    app:layout_constraintStart_toStartOf="@id/tv_favorites_location"
                    app:layout_constraintTop_toBottomOf="@id/tv_favorites_location" />

                <TextView
                    android:id="@+id/tv_favorites_period"
                    android:text="기간"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_13"
                    android:textColor="@color/gray_800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_4"
                    android:lineSpacingExtra="@dimen/text_6"
                    app:layout_constraintStart_toStartOf="@id/tv_favorites_location"
                    app:layout_constraintTop_toBottomOf="@id/tv_favorites_title" />

                <TextView
                    android:id="@+id/tv_favorites_DDay"
                    android:text="종료 D-9"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_35"
                    android:textSize="@dimen/text_14"
                    android:paddingHorizontal="@dimen/padding_9"
                    android:paddingVertical="@dimen/padding_2"
                    android:textColor="@color/primary_blue"
                    android:background="@drawable/favorites_dday_background"
                    app:layout_constraintStart_toStartOf="@id/tv_favorites_location"
                    app:layout_constraintTop_toBottomOf="@id/tv_favorites_period" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>