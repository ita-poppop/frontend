<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_item_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_map"
                    android:layout_width="@dimen/item_132"
                    android:layout_height="@dimen/item_168"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/tv_map_title"
                    android:text="제목"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_20"
                    android:layout_marginStart="@dimen/item_16"
                    android:layout_marginTop="@dimen/item_108"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/iv_map"
                    app:layout_constraintTop_toTopOf="@id/iv_map"/>

                <TextView
                    android:id="@+id/tv_map_period"
                    android:text="기간"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/gray_800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_4"
                    app:layout_constraintStart_toStartOf="@id/tv_map_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_map_title" />
              </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>